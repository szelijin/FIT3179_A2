{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Tourism Arrivals Over Time for Top 10 Tourist Destination Countries",
  "data": {
    "url": "https://raw.githubusercontent.com/szelijin/FIT3179_A2/main/data/world_tourism_economy_data.csv"
  },
  "transform": [
    {
      "filter": {
        "field": "country",
        "oneOf": [
          "France", "Spain", "United States", "China",
          "Italy", "Turkey", "Mexico", "Thailand",
          "Germany", "United Kingdom"
        ]
      }
    },
    {
      "filter": "isValid(datum.tourism_arrivals)"
    },
    {
      "calculate": "toNumber(datum.tourism_arrivals)",
      "as": "Arrivals"
    }
  ],
  "width": "container",
  "height": 400,
  "mark": {
    "type": "line",
    "point": true
  },
  "encoding": {
    "x": {
      "field": "year",
      "type": "temporal",
      "axis": {"title": "Year"}
    },
    "y": {
      "field": "Arrivals",
      "type": "quantitative",
      "axis": {"title": "Tourism Arrivals (Number of Tourists)"}
    },
    "color": {
      "field": "country",
      "type": "nominal",
      "legend": {"title": "Country"}
    },
    "tooltip": [
      {"field": "country", "type": "nominal", "title": "Country"},
      {"field": "year", "type": "temporal", "title": "Year"},
      {
        "field": "Arrivals",
        "type": "quantitative",
        "title": "Tourism Arrivals",
        "format": ","
      }
    ]
  }
}
